{
    "name": "puli/repository",
    "description": "A filesystem-like repository for storing arbitrary resources.",
    "homepage": "http://puli.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.9",
        "webmozart/path-util": "~1.0",
        "webmozart/glob": "~1.0@dev",
        "webmozart/assert": "~1.0@dev"
    },
    "require-dev": {
        "symfony/filesystem": "~2.0"
    },
    "suggest": {
        "symfony/filesystem": "to use the FilesystemRepository"
    },
    "autoload": {
        "psr-4": {
            "Puli\\Repository\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puli\\Repository\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "support": {
        "issues": "https://github.com/puli/issues/issues"
    }
}
